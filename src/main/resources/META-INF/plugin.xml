<idea-plugin>
    <id>skrtks</id>
    <name>CodamHeader</name>
    <version>1.1</version>
    <vendor email="samkortekaas@protonmail.com" url="-">skrtks</vendor>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action id="CodamHeader.Generate" class="Generate" text="Add codam header"
                description="Add Codam header">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt H"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
